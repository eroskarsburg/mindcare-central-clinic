@model ProfileViewModel
@inject IHttpContextAccessor ctx;

<div style="display: flex;justify-content: space-between;">
    <div style="width:50%; padding-right: 2rem;">
        <h3>Dados de Usuário</h3>
        <form>
            <div class="form-group">
                <label for="profile-username" class="col-form-label">Usuário:</label>
                <input type="text" class="form-control" id="profile-username" value="@Model.User.Username" disabled>
            </div>
            <div class="form-group">
                <label for="profile-password" class="col-form-label">Nova Senha:</label>
                <input type="password" class="form-control" id="profile-password">
            </div>
            <div class="form-label">
                <label for="profile-confirmpassword" class="col-form-label">Confirmar Senha:</label>
                <input type="password" class="form-control" id="profile-confirmpassword">
            </div>
            <div style="visibility:hidden" class="form-label">
                <input type="password" class="form-control" id="profile-confirmpassword" value="@Model.User.AccessLevel">
            </div>
            <div>
                <button class="button-6 button-6-primary" onclick="ActProfile.UpdateUserProfile(@Model.User.Id)">Salvar</button>
            </div>
        </form>
    </div>
    @if (Model.Professional.Id > 0)
    {
        <div style="width:50%; padding-left: 2rem;">
            <h3>Dados de Profissional</h3>
            <form>
                <div class="form-group">
                    <label for="profile-professional-name" class="col-form-label">Nome:</label>
                    <input type="text" class="form-control" id="profile-professional-name" value="@Model.Professional.Name">
                </div>
                <div class="form-group">
                    <label for="profile-professional-cpf" class="col-form-label">CPF:</label>
                    <input type="text" class="form-control" id="profile-professional-cpf" value="@Model.Professional.Cpf">
                </div>
                <div class="form-group">
                    <label for="message-text" class="col-form-label">Gênero:</label>
                    <select class="form-select" id="profile-professional-gender">
                        @if (Model.Professional.Gender == "Masculino")
                        {
                            <option>Masculino</option>
                            <option>Feminino</option>
                            <option>Outro</option>
                        }
                        else if (Model.Professional.Gender == "Feminino")
                        {
                            <option>Feminino</option>
                            <option>Masculino</option>
                            <option>Outro</option>
                        }
                        else
                        {
                            <option>Outro</option>
                            <option>Masculino</option>
                            <option>Feminino</option>
                        }
                    </select>
                </div>
                <div class="form-label">
                    <label for="profile-professional-speciality" class="col-form-label">Especialidade:</label>
                    <input type="text" class="form-control" id="profile-professional-speciality" value="@Model.Professional.Speciality">
                </div>
                <div>
                    <button class="button-6 button-6-primary" onclick="ActProfile.UpdateProfessionalProfile(@Model.Professional.Id)">Salvar</button>
                </div>
            </form>
        </div>
    }
</div>