@model PaymentViewModel

@if (Model.PaymentList is null || Model.PaymentList.Count == 0)
{
    <p>Não há pagamentos cadastrados.</p>
}
else
{
    <table class="table" id="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Agendamento</th>
                <th scope="col">Cliente</th>
                <th scope="col">Valor</th>
                <th scope="col">Valor Pago</th>
                <th scope="col">Data Pago</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PaymentList)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.IdAppointment</td>
                    <td>@item.Client.Name</td>
                    <td>@item.Price</td>
                    <td>@item.PaidPrice</td>
                    <td>@item.PaidDateFormatted</td>
                    <td>
                        @item.Status
                        @if(item.Status == MindCare.Application.Enums.EnumPaymentStatus.Confirmado){
                            <svg xmlns="http://www.w3.org/2000/svg" fill="green" class="bi bi-check2-circle" viewBox="0 0 16 16">
                                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0" />
                                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
                            </svg>
                        }
                        else if (item.Status == MindCare.Application.Enums.EnumPaymentStatus.Parcial)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" fill="#e2e23b" class="bi bi-circle-half" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 0 8 1zm0 1A8 8 0 1 1 8 0a8 8 0 0 1 0 16" />
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" fill="red" class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                            </svg>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}