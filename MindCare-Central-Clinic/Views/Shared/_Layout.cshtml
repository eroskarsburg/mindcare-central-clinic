@inject IHttpContextAccessor ctx;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MindCare Clinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="vh-100">
    <main>
        @await RenderSectionAsync("NoMenu", required: false)
        @if (!IsSectionDefined("NoMenu"))
        {
            @await Html.PartialAsync("~/Views/Shared/_SideBar.cshtml")
        }
        <div class="main-container">
            @if (ctx.HttpContext.Session.Keys.Count() > 0)
            {
                @RenderBody()
            }
            else
            {
                @await Html.PartialAsync("~/Views/Login/Index.cshtml")
            }
        </div>
    </main>
    @await Html.PartialAsync("~/Views/Shared/_SpinnerLoader.cshtml")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
