
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">Adicionar Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="user-username" class="col-form-label">Usuário:</label>
                        <input type="text" class="form-control" id="user-username">
                    </div>
                    <div class="form-group">
                        <label for="user-password" class="col-form-label">Senha:</label>
                        <input type="password" class="form-control" id="user-password">
                        <div style="display: flex; padding: 1rem 0">
                            <input type="checkbox" class="form-check" onclick="ModalUser.ShowPassword()">Mostrar Senha
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Nível de Acesso:</label>
                        <select class="form-select" id="user-aclevel">
                            <option>Profissional</option>
                            <option>Administrador</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="button-6 button-6-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="button-6 button-6-primary" onclick="ActUser.Save()">Salvar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/user.js"></script>