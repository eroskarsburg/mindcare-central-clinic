@model ClientViewModel

@if (Model.ClientList is null || Model.ClientList.Count == 0)
{
    <p>Não há clientes cadastrados. <br> Crie um clicando no botão "Novo" ao lado.</p>
}
else
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
                <th scope="col">Gênero</th>
                <th scope="col">Idade</th>
                <th scope="col">Icon here</th>
                <th scope="col">Icon here</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ClientList)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Cpf</td>
                    <td>@item.Gender</td>
                    <td>@item.Age</td>
                    <td>
                        <button class="button-6" onclick="ModalClient.Update(@item.Id, '@item.Name', '@item.Cpf', '@item.Gender', @item.Age)">Alterar</button>
                    </td>
                    <td>
                        <button class="button-6" onclick="ModalClient.Delete(@item.Id, '@item.Name')">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}